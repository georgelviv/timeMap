*
  margin 0
  padding 0
html, body
  height 100%
  width 100%
body
  font-family 'Roboto', sans-serif
  overflow-x hidden

button
  &:hover
    cursor pointer

code
  font-size 1.4rem
  background rgba(0, 0, 0, 0.065)
  .highlight
    display: block;
    overflow-wrap: break-word;
  &:not(.highlight)
    color #106CC8
    margin-left 1px
    margin-right 1px
    -webkit-font-smoothing auto
    padding 0.125em 0.35em
    border-radius 2px


fieldset
  border none
